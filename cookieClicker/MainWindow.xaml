            <Label x:Name="CPS" Content="" Margin="0,0,380,0" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top" Width="380" Foreground="Black" FontSize="36" Height="209"/>
            <Label x:Name="boughtWarn" Content="" Margin="0,214,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Top" Width="380" Foreground="Black" FontSize="36" Height="214"/>
            <Label x:Name="Cursors" Content="" Margin="380,0,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="380" Foreground="Black" FontSize="36" Height="214"/>

        </Grid>

    </Grid>
</Window>
